generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Chat {
  id       String    @id
  username String
  userId   String
  state    Int       @default(0) @db.TinyInt
  messages Message[]
}

model Message {
  id        String   @id @db.UniqueIdentifier
  chatId    String
  content   String
  details   String
  createdAt DateTime
  tasks     Task[]
  number    Int
  chat      Chat     @relation(fields: [chatId], references: [id])
}

model Task {
  id        String   @id @db.UniqueIdentifier
  date      DateTime
  state     Int      @db.TinyInt
  index     Int      @db.TinyInt
  messageId String   @db.UniqueIdentifier
  message   Message  @relation(fields: [messageId], references: [id])
}
