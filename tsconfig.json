{
  "compilerOptions": {
    "target": "ES2016",
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "baseUrl": "./",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@di": ["./src/helpers/di.ts"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
